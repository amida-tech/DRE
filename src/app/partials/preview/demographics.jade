.row(ng-hide='recordData.demographics')
  .lead No demographics entries in this record.

.row(style='padding-top: 20px')
  .col-md-12(ng-repeat="all in recordData.demographics| filter: activefilter")
    .well
      small Marital status: {{all.marital_status}}
      br
      small Race: {{all.race}}
      br
      small Ethnicity: {{all.ethnicity}}
      br
      small Religion: {{all.religion}}
